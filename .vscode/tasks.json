{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "clean",
			"command": "/usr/bin/make",
			"args": [
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"type": "shell",
			"label": "build (release)",
			"command": "/usr/bin/make",
			"args": [
				"release"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"type": "shell",
			"label": "build (debug)",
			"command": "/usr/bin/make",
			"args": [
				"debug"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "deploy",
			"command": "/bin/bash",
			"args": [
				"-c",
				"gksudo ./deploy.sh"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".",
						"endsPattern": "."
					}
				}
			],
			"dependsOn": [
				"clean",
				"build (debug)"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "debug",
			"isBackground": true,
			"command": "/usr/bin/dbus-launch",
			"args": [
				"/usr/bin/gnome-terminal",
				"--working-directory",
				"${workspaceFolder}",
				"-e",
				"\"gdb -ex 'set architecture i386:x86-64:intel' -ex 'target remote :1234'\""
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "kill QEMU",
			"isBackground": true,
			"command": "/bin/bash",
			"args": [
				"-c",
				"gksudo pkill qemu && pkill gdb && pkill deploy.sh",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		}
	]
}